@{
    ViewData["Title"] = "Enter payment details";
}

<div class="row">
    <div class="col-md-3" ng-controller="PaymentsController as form">
        <h3>Enter Payment Details</h3>
        <div ng-repeat="error in form.errors">
            <div class="alert alert-danger">
                {{error}}
            </div>
        </div>
        <div ng-if="form.isValid === true">
            <div class="alert alert-success">
                Payment processed successfully
            </div>
        </div>
        <div ng-if="form.isValid === false">
            <div class="alert alert-success">
                Payment rejected by bank system
            </div>
        </div>

        <form class="form" ng-submit="form.check()">
            <div class="form-group">
                <label>Credit Card Number</label>
                <input class="form-control" type="text" ng-model="form.payment.CreditCardNumber" placeholder="4788487691150972" />
            </div>
            <div class="form-group">
                <label>Card Holder</label>
                <input class="form-control" type="text" ng-model="form.payment.CardHolder" placeholder="Joe Doe" />
            </div>
            <div class="form-group">
                <label>Expiration Date</label>
                <input class="form-control" type="date" ng-model="form.payment.ExpirationDate" placeholder="Select a date" />
            </div>
            <div class="form-group">
                <label>Security Code (Optional)</label>
                <input class="form-control" type="number" ng-model="form.payment.SecurityCode" min="1" placeholder="123" />
            </div>
            <div class="form-group">
                <label>Amount</label>
                <input class="form-control" type="number" ng-model="form.payment.Amount" min="1" step="any" placeholder="1234.45" />
            </div>
            <button type="submit" ng-disabled="form.checking" class="btn btn-sm btn-success pull-right">Check Payment</button>
        </form>

    </div>
</div>
